{
  "extends": ["env"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "curly": ["error", "all"],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": ["modules"]
      }
    ]
  },
  "ignorePatterns": ["node_modules/", "dist"]
}
